#Assigns
assign [class="discord"] workspace $ws10

#Binds
bindsym $mod+g exec chromium
bindsym $mod+minus gaps inner all minus 5
bindsym $mod+equal gaps inner all plus 5
bindsym Ctrl+Print exec scrot '%Y%m%d_%H%M%S.png' -e 'mv $f $HOME/Pictures/'
bindcode $mod+34 exec picom		 #34 - [
bindcode $mod+35 exec killall picom	 #35 - ]
bindcode $mod+Shift+35 exec ~/.config/polybar/launch.sh

#Border & Title
for_window [class="^.*"] border pixel 0, title_format " %title "
gaps inner 10
gaps outer 0

