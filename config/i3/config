#Start dmenu or rofi (a program launcher)
# exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
# exec --no-startup-id nm-applet
exec --no-startup-id picom

#Autostart
bindsym $mod+n exec --no-startup-id networkmanager_dmenudmenu
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status


#Audio
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status         #F1
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status  #F2
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status  #F3
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status  #F4

#Backlight
bindsym XF86MonBrightnessUp exec xbacklight -inc 10   #F5
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 #F6

#bindsym XF86Display exec      #F7
#bindsym XF86WLAN exec       #F8
#bindsym XF86Tools exec      #F9
bindsym XF86Search exec  --no-startup-id i3-dmenu-desktop     #F10
# bindsym XF86LaunchA exec   #F11
bindsym XF86Explorer exec pcmanfm   #F12
#bindsym XF86Sleep exec      #Fn+4
#bindsym Pause exec      #Fn+p
#bindsym Sys_Req exec      #Fn+s
#bindsym Scroll_Lock exec      #Fn+K
#bindsym Break exec      #Fn+B
