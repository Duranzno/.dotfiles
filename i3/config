# Define names for default workspaces for which we configure key bindings later on.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

workspace $ws1 output $mon1
workspace $ws2 output $mon1
workspace $ws3 output $mon1
workspace $ws4 output $mon1
workspace $ws5 output $mon1
workspace $ws6 output $mon1
workspace $ws7 output $mon2
workspace $ws8 output $mon2
workspace $ws9 output $mon2

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

#Move focused to nearest workspaces
bindsym Ctrl+$mod+h workspace prev
bindsym Ctrl+$mod+l workspace next
bindsym Ctrl+$mod+Left workspace prev
bindsym Ctrl+$mod+Right workspace next

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
#Move workspaces to another monitor
bindsym $mod+Shift+n move workspace to output left
bindsym $mod+Shift+m move workspace to output left


# Open applications on specific workspaces
assign [class="pcmanfm"] $ws1
assign [class="chromium"] $ws3
assign [class="code"] $ws2
assign [class="visual-studio-code"] $ws2
# assign [class="whats-app-web-nativefier-d52542"] $ws5
assign [class="telegram-desktop"] $ws5
assign [class="discord"] workspace $ws5
assign [class="slack"] workspace $ws5
assign [class="alacritty"] workspace $ws9


# switch to workspace with urgent window automatically
for_window [urgent=latest] focus
